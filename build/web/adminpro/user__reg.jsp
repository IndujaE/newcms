			<div>User<span><br>Registration</span></div>
		</div>
		<br>
		<div class="login">
                    <input type="text" placeholder="User Name" name="uname" required><br>
                    <input type="password" placeholder="Password" name="password" required><br>
                    <input type="text" placeholder="First Name" name="fname" required><br>
                    <input type="text" placeholder="Last Nsme" name="lname" required><br>
                    <input type="text" placeholder="Registration Number" name="rno" required><br>
                    <input type="text" placeholder="Branch" name="branch" required><br>
                    <input type="text" placeholder="Email-ID" name="email" required><br>
                    <input type="text" placeholder="Phone Number" name="phno" required><br>
				<input type="submit" value="Register" >
		</div>
      </form>
